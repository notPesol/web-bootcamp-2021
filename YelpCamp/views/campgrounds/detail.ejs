<% layout('./layouts/boilerplate') %>

    <div class="row my-3">
        <div class="col-6 offset-3">
            <div class="card">
                <img src="<%= camp.image %> " class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <%= camp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">$<%= camp.price %>/night</li>
                    <li class="list-group-item text-muted">
                        <%= camp.location %>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%= camp._id %>/edit" class="card-link btn btn-warning">Edit</a>
                    <form class="d-inline float-end" action="/campgrounds?_method=DELETE" method="POST">
                        <input type="hidden" name="id" value="<%= camp._id %>">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a class="text-muted" href="/campgrounds">All Campgrounds</a>
                </div>
            </div>
        </div>
    </div>
        <h1>Condition EJS</h1>
        <% if (number % 2===0) { %>
            <h2>
                <%= number %> is an Even Number
            </h2>
            <% } else if (number % 2===1){ %>
                <h2>
                    <%= number %> is an Odd Number
                </h2>
                <% }else { %>
                    <h2>
                        <%= number %> is not a Number
                    </h2>
                    <%} %>

                        <h3>
                            <%= number % 2===0 ? `${number} is Even Number` : `${number} is Odd Number` %>
                        </h3>



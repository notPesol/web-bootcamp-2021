<%- include('partials/head') %>


    <%- include('partials/navbar') %>
        <div class="container">

            <h1>Browsing The <%= subreddit %> subreddit</h1>
            <% if(data) {%>
                <h2>
                    <%= data.description %>
                </h2>
                <p>
                    <%= data.subscribers %> Total subscribers
                </p>
                <hr>

                <% for (const post of data.posts) { %>
                    <article>
                        <p>
                            <%= post.title %> -<b>
                                    <%= post.author %>
                                </b>
                        </p>
                        <% if(post.img) { %>
                            <img src="<%= post.img %>" alt="pic">
                            <% } %>
                    </article>
                    <hr>
                    <% } %>

                        <% } else { %>
                            <hr>
                            <h2>Not Found!! <%= subreddit %> Subreddit</h2>
                            <% } %>

        </div>
        <%- include('partials/footer') %>